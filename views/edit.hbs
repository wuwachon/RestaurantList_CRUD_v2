<div class="container mt-4 d-flex flex-column align-items-center">
  <h2>Edit Restaurant Details</h2>
  <form action="/restaurants/{{ restaurant._id }}/edit" method="post" class="row">
    <div class="col-6 mb-2">
      <label for="name" class="form-label">Name：</label>
      <input type="text" class="form-control" placeholder="restaurant name" name="name" id="name" required value="{{ restaurant.name }}">
    </div>
    <div class="col-6 mb-2">
      <label for="category" class="form-label">Category：</label>
      <input type="text" class="form-control" placeholder="category" name="category" id="category" value="{{ restaurant.category }}">
    </div>
    <div class="col-6 mb-2">
      <label for="phone" class="form-label">Phone：</label>
      <input type="tel" class="form-control" placeholder="restaurant phone" name="phone" id="phone" value="{{ restaurant.phone }}">
    </div>
    <div class="col-6 mb-2">
      <label for="rating" class="form-label">Rating：</label>
      <input type="number" class="form-control" placeholder="restaurant rating" name="rating" id="rating" value="{{ restaurant.rating }}" min="0" max="5">
    </div>
    <div class="col-12 mb-2">
      <label for="image" class="form-label">Picture Link：</label>
      <input type="url" class="form-control" placeholder="restaurant picture Link" name="image" id="image" value="{{ restaurant.image }}">
    </div>
    <div class="col-12 mb-2">
      <label for="location" class="form-label">Location：</label>
      <input type="text" class="form-control" placeholder="restaurant location" name="location" id="location" required value="{{ restaurant.location }}">
    </div>
    <div class="col-12 mb-2">
      <label for="google_map" class="form-label">Google_Map：</label>
      <input type="url" class="form-control" placeholder="restaurant google_map link" name="google_map" id="google_map" required value="{{ restaurant.google_map }}">
    </div>
    <div class="col-12 mb-3">
      <label for="description" class="form-label">Description：</label>
      <input type="text" class="form-control" placeholder="restaurant description" name="description" id="description" required value="{{ restaurant.description }}">
    </div>
    <div class="d-flex justify-content-center mb-3">
      <button type="submit" class="btn btn-sm btn-outline-primary me-2">Save</button>
      <a href="/" class="btn btn-sm btn-outline-secondary">Back</a>
    </div>
  </form>
</div>