<div class="container">
  <div class="row d-flex justify-content-between">
    <!-- search bar -->
    <div class="col-lg-5">
      <div class="search-bar">
        <div class="search-bar-outer">
          <div class="search-bar-inner">
            <form action="/restaurants/search">
              <h4 class="mb-2">尋找餐廳：</h4>
              <div class="input-group">
                <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}">
                <div class="input-group-append">
                  <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{!-- Sort option --}}
    <div class="col-lg-5">
      <div class="sort-bar">
        <div class="sort-bar-outer">
          <div class="sort-bar-inner">
            <form action="/restaurants/sort" method="post">
              <h4 class="mb-2">餐廳排序：</h4>
              <select name="sort" class="form-select" aria-label="Default select example" onchange="form.submit()">
                <option selected>{{ sort }}</option>
                <option value="name">A->Z</option>
                <option value="-name">Z->A</option>
                <option value="category">類別</option>
                <option value="location">地區</option>
              </select>
              {{!-- <div class="input-group">
                <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}">
                <div class="input-group-append">
                  <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div> --}}
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3">
    {{#each restaurant}}
    <div class="col">
      <a href="/restaurants/{{ this._id }}" class="text-secondary text-decoration-none">
        <div class="card mb-2">
          <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{ this.category }}
            </div>

            <span class="badge rounded-pill bg-danger fw-normal">
              {{ this.rating }}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
        <div class="mb-3 d-flex justify-content-end">
          <a href="/restaurants/{{ this._id }}/edit" class="btn btn-sm btn-outline-primary me-3">Edit</a>
          <a class="me-3 btn btn-sm btn-outline-info" href="/restaurants/{{ this._id }}">Detail</a>
          <form action="/restaurants/{{ this._id }}/delete" method="post" style="display: inline;">
            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>